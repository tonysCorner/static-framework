doctype html
html(lang="zh-CN")

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    meta(name='description', content='{{app.description}}')
    meta(name="format-detection" content="telephone=no")
    meta(name='keywords', content='app, responsive, angular, bootstrap, dashboard, admin')

    title(data-ng-bind="currTitle") 首页
    // Bootstrap styles
    link(rel='stylesheet', href='app/css/bootstrap.css', data-ng-if="!app.layout.isRTL")
    link(rel='stylesheet', href='app/css/bootstrap-rtl.css', data-ng-if="app.layout.isRTL")
    // ngMaterial styles
    link(rel='stylesheet', href='vendor/angular-material/angular-material.css')
    // Application styles
    link(rel='stylesheet', href='app/css/app.css?v=--version', data-ng-if="!app.layout.isRTL")
    link(rel='stylesheet', href='app/css/app-rtl.css?v=--version', data-ng-if="app.layout.isRTL")
    // Themes
    link(rel='stylesheet', ng-href='{{app.layout.theme}}', data-ng-if="app.layout.theme")
    //vendor.base.json
    link(rel='stylesheet', href='app/css/base.css?v=--version')

  body(data-ng-class="{ 'layout-fixed' : app.layout.isFixed, 'aside-collapsed' : app.layout.isCollapsed, 'layout-boxed' : app.layout.isBoxed, 'layout-fs': app.useFullLayout, 'hidden-footer': app.hiddenFooter, 'layout-h': app.layout.horizontal, 'aside-float': app.layout.isFloat, 'offsidebar-open': app.offsidebarOpen, 'aside-toggled': app.asideToggled,'whirl':isLoading}")

    //div(data-preloader)

    .wrapper(data-ui-view="", data-autoscroll='false')
    toaster-container(toaster-options="{'position-class': 'toast-bottom-right', 'close-button':true}")

    script(src='app/js/base.js?v=--version')
    script(src='vendor/angular-material/angular-material.js')
    script(src='app/js/app.js?v=--version')
    //- templates:js
    //- endinject
